Sub texte()

Selection.Font.Size = 14
Selection.Font.Name = "Euclid"
Selection.Font.Underline = xlUnderlineStyleSingle
Selection.Font.Bold = true

End Sub




Sub texte()

With Selection.Font

    .Size = 14
    .Name = "Euclid"
    .Underline = xlUnderlineStyleSingle
    .Bold = true

End With

End Sub
